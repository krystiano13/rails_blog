<%= form_with model: blog_post, url: url do |form| %>

  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |error| %>
      <p style="color:red;"><%= error %></p>
    <% end %>
  <% end %>

  <div>
    <%= form.label :title %>
    <br />
    <%= form.text_field :title %>
  </div>
  <br />
  <div>
    <%= form.label :body %>
    <br />
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :published_at %>
    <br />
    <%= form.datetime_select :published_at, include_blank: true %>
  </div>
  <br />
  <%= form.button "Create Post", class: "bg-blue-500 p-1 pl-6 pr-6 cursor-pointer hover:bg-blue-600 transition-colors rounded-lg text-white" %>
<% end %>